<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="handlingEventFactory" class="se.citerus.dddsample.tracking.core.domain.model.handling.HandlingEventFactory">
    <constructor-arg ref="cargoRepository"/>
    <constructor-arg ref="voyageRepository"/>
    <constructor-arg ref="locationRepository"/>
  </bean>

  <bean id="cargoFactory" class="se.citerus.dddsample.tracking.core.domain.model.cargo.CargoFactory">
    <constructor-arg ref="trackingIdGenerator"/>
    <constructor-arg ref="locationRepository"/>
  </bean>

</beans>