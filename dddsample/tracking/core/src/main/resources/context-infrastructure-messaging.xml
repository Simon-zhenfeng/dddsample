<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:amq="http://activemq.apache.org/schema/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms-2.5.xsd
                           http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <!--context:component-scan base-package="se.citerus.dddsample.tracking.core.infrastructure.messaging.jms"/-->

  <amq:connectionFactory id="jmsConnectionFactory"
                         brokerURL="vm://localhost?broker.persistent=false&amp;broker.useJmx=false"/>

  <amq:queue id="cargoHandledQueue" name="CargoHandledQueue" physicalName="CargoHandledQueue"/>
  <amq:topic id="cargoUpdateTopic" name="CargUpdateTopic" physicalName="CargoUpdateTopic"/>

  <jms:listener-container connection-factory="jmsConnectionFactory">
    <jms:listener destination="CargoHandledQueue" ref="listener3"/>
    <jms:listener destination="CargoUpdateTopic" ref="listener1"/>
    <jms:listener destination="CargoUpdateTopic" ref="listener2"/>
  </jms:listener-container>

  <bean id="listener1" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="misdirectedNotifier"/>
    <property name="defaultListenerMethod" value="alertIfMisdirected"/>
  </bean>

  <bean id="listener2" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="readyToClaimNotfier"/>
    <property name="defaultListenerMethod" value="alertIfReadyToClaim"/>
  </bean>

  <bean id="listener3" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="cargoUpdater"/>
    <property name="defaultListenerMethod" value="updateCargo"/>
  </bean>

  <bean id="jmsOperations" class="org.springframework.jms.core.JmsTemplate">
    <property name="connectionFactory" ref="jmsConnectionFactory"/>
  </bean>

  <bean class="se.citerus.dddsample.tracking.core.infrastructure.messaging.jms.JmsSystemEventsImpl">
    <constructor-arg ref="jmsOperations"/>
    <constructor-arg ref="cargoHandledQueue"/>
    <constructor-arg ref="cargoUpdateTopic"/>
  </bean>
  
</beans>