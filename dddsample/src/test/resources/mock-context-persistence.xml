<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="sessionFactory" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="org.hibernate.SessionFactory"/>
  </bean>

  <bean id="cargoRepository" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="se.citerus.dddsample.repository.CargoRepository"/>
  </bean>

  <bean id="handlingEventRepository" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="se.citerus.dddsample.repository.HandlingEventRepository"/>
  </bean>

  <bean id="carrierMovementRepository" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="se.citerus.dddsample.repository.CarrierMovementRepository"/>
  </bean>

  <bean id="locationRepository" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="se.citerus.dddsample.repository.LocationRepository"/>
  </bean>

  <bean id="jmsOperations" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="org.springframework.jms.core.JmsOperations"/>
  </bean>

  <bean id="handlingEventTopic" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="javax.jms.Destination"/>
  </bean>
  
</beans>