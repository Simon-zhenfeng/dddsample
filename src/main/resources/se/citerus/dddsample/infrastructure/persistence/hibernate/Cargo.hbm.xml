<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
  <class name="se.citerus.dddsample.domain.model.cargo.Cargo" table="Cargo">

    <id name="id" column="id">
      <generator class="org.hibernate.id.IdentityGenerator"/>
    </id>

    <component name="trackingId" unique="true" update="false">
      <property name="id" column="tracking_id"/>
    </component>

    <component name="delivery" lazy="true" update="false">
      <set name="events" lazy="true" cascade="none">
        <key column="cargo_id"/>
        <one-to-many class="se.citerus.dddsample.domain.model.handling.HandlingEvent"/>
      </set>
    </component>

    <component name="routeSpecification">
      <many-to-one name="origin" column="origin_id" cascade="none" update="false" foreign-key="origin_fk"/>
      <many-to-one name="destination" column="destination_id" cascade="none" foreign-key="destination_fk"/>
      <property name="arrivalDeadline" column="arrival_deadline" not-null="true"/>
    </component>

    <component name="itinerary">
      <list name="legs" lazy="true" cascade="all">
        <key column="cargo_id" foreign-key="itinerary_fk"/>
        <index column="leg_index"/>
        <one-to-many class="se.citerus.dddsample.domain.model.cargo.Leg"/>
      </list>
    </component>

  </class>
</hibernate-mapping>