<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="sessionFactory" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="org.hibernate.SessionFactory"/>
  </bean>

  <bean id="cargoRepository" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="se.citerus.dddsample.repository.CargoRepository"/>
  </bean>
  
  <bean id="handlingEventRepository" class="se.citerus.dddsample.repository.HandlingEventRepositoryInMem" init-method="init">
    <property name="carrierRepository" ref="carrierMovementRepository"/>
  </bean>
  
  <bean id="carrierMovementRepository" class="se.citerus.dddsample.repository.CarrierMovementRepositoryInMem" />
</beans>